:root {
    --primary-alt: #E67E22;
    /* Deep Industrial Orange */
    --primary-dark: #1A252F;
    /* Darker Slate */
    --accent-gold: #FFD700;
    --dark: #0F172A;
    --light: #F8FAFC;
    --white: #FFFFFF;
    --gray: #64748B;
    --transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    --shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    --pattern: radial-gradient(#cbd5e1 0.5px, transparent 0.5px);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', sans-serif;
    color: var(--dark);
    line-height: 1.6;
    background-color: var(--white);
    overflow-x: hidden;
}

h1,
h2,
h3,
h4 {
    font-family: 'Outfit', sans-serif;
    font-weight: 800;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

/* Header */
header {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    z-index: 1000;
    padding: 1rem 0;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
    transition: var(--transition);
}

header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -1px;
    color: var(--primary-dark);
}

.logo-accent {
    color: var(--primary-alt);
}

nav ul {
    display: flex;
    list-style: none;
    align-items: center;
    gap: 2rem;
}

nav ul li a {
    text-decoration: none;
    color: var(--dark);
    font-weight: 600;
    font-size: 0.95rem;
    transition: var(--transition);
}

nav ul li a:hover {
    color: var(--primary-alt);
}

/* Hero Section */
.hero {
    height: 90vh;
    min-height: 600px;
    background: url('https://images.unsplash.com/photo-1541888946425-d81bb19480c5?auto=format&fit=crop&q=80') center/cover no-repeat;
    position: relative;
    display: flex;
    align-items: center;
    color: var(--white);
}

.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(44, 62, 80, 0.95) 0%, rgba(44, 62, 80, 0.5) 100%);
}

.hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
}

.hero h1 {
    font-size: 4rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
}

.hero h1 span {
    color: var(--primary-alt);
    display: block;
}

.hero p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.9;
}

/* Buttons */
.btn-primary,
.btn-primary-large,
.btn-primary-sm {
    background: var(--primary-alt);
    color: var(--white);
    padding: 1rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    display: inline-block;
    transition: var(--transition);
    border: 2px solid var(--primary-alt);
}

.btn-primary:hover,
.btn-primary-large:hover,
.btn-primary-sm:hover {
    background: transparent;
    color: var(--primary-alt);
    transform: translateY(-3px);
}

.btn-secondary {
    background: transparent;
    color: var(--white);
    padding: 1rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    display: inline-block;
    transition: var(--transition);
    border: 2px solid var(--white);
    margin-left: 1rem;
}

.btn-secondary:hover {
    background: var(--white);
    color: var(--primary-dark);
    transform: translateY(-3px);
}

.btn-primary-sm {
    padding: 0.6rem 1.5rem;
}

.btn-primary-large {
    padding: 1.2rem 3rem;
    font-size: 1.1rem;
}

/* Categories Nav */
.categories-nav {
    background: var(--white);
    padding: 1.5rem 0;
    position: sticky;
    top: 70px;
    z-index: 900;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.03);
}

.category-tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
    scrollbar-width: none;
}

.category-tabs::-webkit-scrollbar {
    display: none;
}

.tab-btn {
    background: var(--light);
    border: 1px solid #e1e8ed;
    padding: 0.7rem 1.5rem;
    border-radius: 30px;
    cursor: pointer;
    font-weight: 600;
    white-space: nowrap;
    transition: var(--transition);
    color: var(--primary-dark);
}

.tab-btn.active,
.tab-btn:hover {
    background: var(--primary-dark);
    color: var(--white);
    border-color: var(--primary-dark);
    transform: translateY(-2px);
}

/* Products Section */
.products {
    padding: 100px 0;
    background-color: var(--light);
    background-image: var(--pattern);
    background-size: 20px 20px;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: var(--primary-alt);
    border-radius: 2px;
}

.section-subtitle {
    margin-top: -3.5rem;
    margin-bottom: 4rem;
    color: var(--gray);
    font-size: 1.1rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.section-title.left {
    text-align: left;
}

.section-title.left::after {
    left: 30px;
}

.product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
}

.product-card {
    background: var(--white);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
}

.product-card:hover {
    transform: translateY(-10px);
}

.product-image {
    position: relative;
    height: 220px;
    overflow: hidden;
}

.product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.product-card:hover .product-image img {
    transform: scale(1.1);
}

.product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.4) 100%);
}

.product-img-placeholder {
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    font-weight: 800;
    font-size: 1rem;
    text-align: center;
    padding: 20px;
    text-transform: uppercase;
}

.obra-bg {
    background: linear-gradient(135deg, #2C3E50 0%, #000000 100%);
}

.plomeria-bg {
    background: linear-gradient(135deg, #2980B9 0%, #2C3E50 100%);
}

.electrico-bg {
    background: linear-gradient(135deg, #F1C40F 0%, #D35400 100%);
}

.herramientas-bg {
    background: linear-gradient(135deg, #7F8C8D 0%, #2C3E50 100%);
}

.acabados-bg {
    background: linear-gradient(135deg, #F39C12 0%, #E67E22 100%);
}

.category-tag {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--primary-alt);
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
}

.product-info {
    padding: 2rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

.product-info h3 {
    margin-bottom: 1rem;
    color: var(--primary-dark);
}

.product-specs {
    list-style: none;
    margin: 1.5rem 0;
}

.product-specs li {
    padding-left: 1.5rem;
    position: relative;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    color: var(--gray);
}

.product-specs li::before {
    content: 'â†’';
    position: absolute;
    left: 0;
    color: var(--primary-alt);
}

.product-cta {
    display: block;
    text-align: center;
    color: var(--primary-alt);
    text-decoration: none;
    font-weight: 700;
    padding: 0.8rem;
    border: 1px solid var(--primary-alt);
    border-radius: 10px;
    transition: var(--transition);
}

.product-cta:hover {
    background: var(--primary-alt);
    color: var(--white);
}

/* Quote Section */
.quote-form-section {
    padding: 120px 0;
    background: linear-gradient(135deg, #F8FAFC 0%, #E2E8F0 100%);
    position: relative;
    overflow: hidden;
}

.quote-container {
    background: var(--primary-dark);
    color: var(--white);
    padding: 4rem;
    border-radius: 40px;
    position: relative;
    box-shadow: 0 40px 80px rgba(0, 0, 0, 0.2);
}

.quote-container .section-title {
    color: var(--white);
}

.quote-container .section-title::after {
    background: var(--primary-alt);
}

.quote-container p {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
}

.quote-features {
    list-style: none;
    margin-top: 2rem;
}

.quote-features li {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-weight: 600;
}

.quote-features span {
    color: var(--primary-alt);
    font-size: 1.5rem;
}

.quote-card-box {
    background: var(--white);
    padding: 3rem;
    border-radius: 30px;
    box-shadow: var(--shadow);
    text-align: center;
}

.quote-card-box h3 {
    margin-bottom: 1rem;
}

.quote-card-box p {
    margin-bottom: 2rem;
    color: var(--gray);
}

.full-width {
    width: 100%;
}

@media (max-width: 768px) {
    .quote-container {
        padding: 2rem;
    }
}

/* Benefits Section */
.benefits {
    padding: 120px 0;
    background: var(--white);
}

.grid-2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.benefits-image-placeholder {
    height: 500px;
    background: url('https://images.unsplash.com/photo-1503387762-592dee58c460?auto=format&fit=crop&q=80') center/cover;
    border-radius: 30px;
    position: relative;
}

.glass-card {
    position: absolute;
    bottom: 30px;
    right: -20px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 20px;
    box-shadow: var(--shadow);
    max-width: 200px;
}

.benefit-item {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.benefit-icon {
    width: 50px;
    height: 50px;
    background: var(--primary-dark);
    color: var(--white);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    font-weight: bold;
    flex-shrink: 0;
}

/* Banner CTA */
.cta-banner {
    background: var(--primary-dark);
    color: var(--white);
    padding: 80px 0;
}

.cta-banner h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.cta-banner p {
    margin-bottom: 2.5rem;
    opacity: 0.8;
}

.text-center {
    text-align: center;
}

/* Footer */
footer {
    background: #0F172A;
    color: var(--white);
    padding: 100px 0 0;
    position: relative;
}

.footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1.5fr;
    gap: 4rem;
    padding-bottom: 60px;
}

.footer-brand p {
    margin-top: 2rem;
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
    line-height: 1.8;
}

.footer-links h4,
.footer-contact h4 {
    margin-bottom: 2rem;
    color: var(--primary-alt);
    font-size: 1.2rem;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.footer-links ul li {
    margin-bottom: 1rem;
}

.footer-links a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: var(--transition);
    font-weight: 500;
}

.footer-links a:hover {
    color: var(--primary-alt);
    transform: translateX(10px);
    display: inline-block;
}

.footer-contact p {
    margin-bottom: 1.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
}

.footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 30px 0;
    text-align: center;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.4);
}

/* Floating WhatsApp */
.whatsapp-float {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background: #25d366;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    z-index: 1000;
    transition: var(--transition);
}

.whatsapp-float:hover {
    transform: scale(1.1);
}

/* Animations */
.fade-in {
    animation: fadeIn 1s ease-out forwards;
}

.fade-in-delay {
    opacity: 0;
    animation: fadeIn 1s ease-out 0.5s forwards;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive */
@media (max-width: 968px) {
    .hero h1 {
        font-size: 3rem;
    }

    .footer-grid,
    .grid-2 {
        grid-template-columns: 1fr;
        gap: 3rem;
    }

    .benefits-image-placeholder {
        height: 300px;
    }

    .hero-btns {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .btn-secondary {
        margin-left: 0;
    }

    nav ul {
        display: none;
    }
